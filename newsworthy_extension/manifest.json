{
    "manifest_version": 1,
    "name": "Newsworthy Extension",
    "description": "Newsworthy-Better way to curate, discover, and discuss quality articles on the web",
    "version": "0.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "http://*/", 
        "https://*/"
    ]
}